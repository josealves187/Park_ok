<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.CheckOutActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">


            <TextView
                android:id="@+id/tv_check_out_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Marcelo"
                android:textColor="@color/colorNameTextView"
                app:layout_constraintEnd_toEndOf="@+id/iv_check_out_card"
                app:layout_constraintStart_toStartOf="@+id/iv_check_out_card"
                app:layout_constraintTop_toBottomOf="@+id/iv_check_out_card" />

            <TextView
                android:id="@+id/tv_check_out_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/quicksand_light"
                android:text="123.***.***-**"
                android:textColor="@color/colorNameTextView"
                app:layout_constraintEnd_toEndOf="@+id/tv_check_out_name_user"
                app:layout_constraintStart_toStartOf="@+id/tv_check_out_name_user"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_out_name_user" />

            <TextView
                android:id="@+id/tv_check_out_board_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="PZO - 5879"
                android:textColor="@color/colorNameTextView"
                app:layout_constraintEnd_toEndOf="@+id/iv_check_out_board"
                app:layout_constraintStart_toStartOf="@+id/iv_check_out_board"
                app:layout_constraintTop_toBottomOf="@+id/iv_check_out_board" />

            <TextView
                android:id="@+id/tv_check_out_hoursman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Horista"
                android:textColor="@color/colorNameTextView"
                app:layout_constraintEnd_toEndOf="@+id/iv_check_out_time"
                app:layout_constraintStart_toStartOf="@+id/iv_check_out_time"
                app:layout_constraintTop_toBottomOf="@+id/iv_check_out_time" />

            <TextView
                android:id="@+id/tv_check_out_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/quicksand_light"
                android:text="Entrada: 08:56"
                app:layout_constraintEnd_toStartOf="@+id/tv_check_out_hoursman"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_out_hoursman" />

            <TextView
                android:id="@+id/tv_check_out_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_light"
                android:text="Entrada: 08:56"
                android:textColor="@color/colorNameTextView"
                app:layout_constraintStart_toEndOf="@+id/tv_check_out_hoursman"
                app:layout_constraintTop_toTopOf="@+id/tv_check_out_input" />

            <TextView
                android:id="@+id/tv_check_out_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_regular"
                android:text="Valor a pagar: R$ 15,00"
                android:textColor="@color/colorNameTextView"
                app:layout_constraintEnd_toEndOf="@+id/iv_check_out_amount_paid"
                app:layout_constraintStart_toStartOf="@+id/iv_check_out_amount_paid"
                app:layout_constraintTop_toBottomOf="@+id/iv_check_out_amount_paid" />

            <TextView
                android:id="@+id/tv_check_out_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="Este cliente possui minutos acumulados!"
                android:textColor="@color/colorNameTextView"
                app:layout_constraintEnd_toEndOf="@+id/tv_check_out_amount"
                app:layout_constraintStart_toStartOf="@+id/tv_check_out_amount"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_out_amount" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_check_out_card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_car"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mt_toolbar_check_out" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_check_out_board"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/board"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_out_cpf" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_check_out_time"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/ic_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_out_board_user" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_check_out_amount_paid"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/ic_amount_paid_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_out_exit" />


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/mt_toolbar_check_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_arrow"
                app:title="@string/title_toolbar_check_out"
                app:titleTextAppearance="@style/MaterialToolbarMenuStyleTheme"
                app:titleTextColor="@color/color_toolbar" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cm_check_out_discount_benefit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="26dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_out_payment_method"
                app:layout_constraintBottom_toTopOf="@+id/cm_bonus_customer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="@color/colorStrokeCardView"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_client_check"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="DESCONTAR NO PAGAMENTO"
                        android:textColor="@color/colorTextViewText"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/aciv_discount_benefit"
                        app:layout_constraintEnd_toStartOf="@+id/aciv_entrs"
                        app:layout_constraintStart_toEndOf="@+id/aciv_discount_benefit"
                        app:layout_constraintTop_toTopOf="@id/aciv_discount_benefit" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aciv_discount_benefit"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_discount_benefit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_title_client_check"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aciv_entrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_indication"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_title_client_check"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_title_client_check"
                        app:layout_constraintTop_toTopOf="@+id/tv_title_client_check" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cm_bonus_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="26dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="@color/colorStrokeCardView"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="ACUMULAR MINUTOS"
                        android:textColor="@color/colorTextViewText"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/aciv_gift"
                        app:layout_constraintEnd_toStartOf="@+id/aciv_entry"
                        app:layout_constraintStart_toEndOf="@+id/aciv_gift"
                        app:layout_constraintTop_toTopOf="@id/aciv_gift" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aciv_gift"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_gift"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_title_gift"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aciv_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_indication"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_title_gift"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_title_gift"
                        app:layout_constraintTop_toTopOf="@+id/tv_title_gift" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
